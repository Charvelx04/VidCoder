<Window x:Class="VidCoder.View.ExceptionDialog"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" xmlns:LocalResources="clr-namespace:VidCoder.LocalResources"
		xmlns:prop="clr-namespace:VidCoder.Properties" Title="{x:Static LocalResources:MiscRes.ExceptionWindowTitle}" Height="381" Width="505"
		Style="{StaticResource NormalWindow}" WindowStartupLocation="CenterScreen">
	<Grid>
		<Image Height="32" HorizontalAlignment="Left" Margin="19,16,0,0" Name="errorIcon" Stretch="Fill" VerticalAlignment="Top" Width="32" />
		<TextBlock
			Margin="65,12,0,0" VerticalAlignment="Top" TextWrapping="Wrap" TextAlignment="Left" FontSize="14"
			Text="{x:Static LocalResources:MiscRes.ExceptionDialogMainText}" HorizontalAlignment="Left" />
		<TextBlock 
			HorizontalAlignment="Left" Margin="78,41,0,0" Text="{x:Static LocalResources:MiscRes.ExceptionDialogSubText}" VerticalAlignment="Top" />
		<TextBlock
			HorizontalAlignment="Left" Margin="19,63,0,0" Text="Details:" VerticalAlignment="Top" />
		<TextBox Margin="12,84,12,42" Name="exceptionTextBox" IsReadOnly="True" Background="#EAEAEA" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto" />
		<Button Content="{x:Static prop:Resources.Ok}" HorizontalAlignment="Right" Margin="0,0,12,8" Width="75" Height="23" VerticalAlignment="Bottom" IsDefault="True" IsCancel="True" />
		<Button 
			Height="24" HorizontalAlignment="Right" Margin="0,0,127,8" Name="copyButton" VerticalAlignment="Bottom" MinWidth="68" Click="copyButton_Click">
			<StackPanel Orientation="Horizontal" Margin="5,0">
				<Image Source="/Icons/copy.png" Width="16" Height="16" />
				<TextBlock Text="{x:Static prop:Resources.Copy}" Margin="4,0,0,0" />
			</StackPanel>
		</Button>
	</Grid>
</Window>
